@model BulkyBook.Models.Category;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = Model.CategoryId == 0 ? "Create Category" : "Update Category";

}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom text-primary">
            <h2>@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.CategoryId == 0)
                    {
                        <partial name="_CreateOrBackButton" />
                    }
                    else
                    {
                        <partial name="_EditOrBackButton" model="Model.CategoryId" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}